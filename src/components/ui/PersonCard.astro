---
import Mail from '@/components/icons/contact/Mail.astro'
import User from '@/components/icons/ui/User.astro'

interface Props {
  nombre: string
  cargo: string
  email: string
}

const { nombre, cargo, email } = Astro.props
---

<div
  class="group flex flex-col items-center rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-all duration-300 hover:border-blue-200 hover:shadow-lg"
>
  <div
    class="mb-5 flex h-28 w-28 items-center justify-center rounded-full bg-linear-to-br from-blue-500 to-blue-700 shadow-md"
  >
    <User class="h-16 w-16 text-white" />
  </div>

  <h3 class="text-primary mb-2 text-center text-base leading-snug font-bold">
    {nombre}
  </h3>

  <p class="mb-4 text-center text-xs font-medium text-gray-500">
    {cargo}
  </p>

  <a
    href={`mailto:${email}`}
    class="mt-auto flex w-full items-center justify-center gap-2 rounded-lg bg-blue-50 px-4 py-2.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100"
  >
    <Mail />
    <span class="truncate">{email}</span>
  </a>
</div>

---
interface Props {
  variant?: 'primary' | 'secondary' | 'link'
  size?: 'sm' | 'md' | 'lg'
  uppercase?: boolean
  href: string
  target?: '_blank' | '_self'
  class?: string
}

const {
  variant = 'primary',
  size = 'sm',
  uppercase = true,
  href,
  target = '_blank',
  class: className = '',
} = Astro.props

const baseClasses =
  'inline-flex items-center gap-1 rounded-lg font-semibold backdrop-blur-sm shadow-lg transition-all hover:scale-105'

const variantClasses = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700',
  secondary: 'bg-white/90 text-gray-900 hover:bg-white',
  link: 'bg-accent/90 text-primary hover:bg-accent',
}

const sizeClasses = {
  sm: 'px-3 py-2 text-[11px]',
  md: 'px-4 py-2.5 text-sm',
  lg: 'px-5 py-3 text-base',
}

const uppercaseClass = uppercase ? 'uppercase tracking-wide' : ''

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${uppercaseClass} ${className}`
---

<a
  href={href}
  target={target}
  rel={target === '_blank' ? 'noopener noreferrer' : undefined}
  class={classes}
>
  <slot />
</a>

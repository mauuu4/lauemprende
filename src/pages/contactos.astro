<Layout
  title="Contactos - La UEmprende"
  description="Directorio de contactos y estructura organizacional de La UEmprende"
>
  <section class="bg-gray-50 py-16">
    <div class="mx-auto max-w-7xl px-6">
      <h1 class="text-primary mb-12 text-center text-3xl font-bold md:text-4xl">
        Directorio de Contactos
      </h1>

      {
        directorio.map(({ departamento, personal }) => (
          <div class="mb-12">
            <h2 class="text-primary mb-6 text-xl font-bold uppercase">
              {departamento}
            </h2>

            <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
              {personal.map(({ cargo, nombre, email }) => (
                <div class="group flex flex-col items-center rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-all duration-300 hover:border-blue-200 hover:shadow-lg">
                  <div class="mb-5 flex h-28 w-28 items-center justify-center rounded-full bg-linear-to-br from-blue-500 to-blue-700 shadow-md">
                    <User class="h-16 w-16 text-white" />
                  </div>

                  <h3 class="text-primary mb-2 text-center text-base leading-snug font-bold">
                    {nombre}
                  </h3>

                  <p class="mb-4 text-center text-xs font-medium text-gray-500">
                    {cargo}
                  </p>

                  <a
                    href={`mailto:${email}`}
                    class="mt-auto flex w-full items-center justify-center gap-2 rounded-lg bg-blue-50 px-4 py-2.5 text-xs font-medium text-blue-700 transition-colors hover:bg-blue-100"
                  >
                    <Mail />
                    <span class="truncate">{email}</span>
                  </a>
                </div>
              ))}
            </div>
          </div>
        ))
      }

      <!-- Información de contacto general -->
      <div class="mt-8 rounded-xl bg-white p-8 shadow-md">
        <h2 class="text-primary mb-8 text-center text-2xl font-bold">
          Información de Contacto General
        </h2>
        <div class="grid gap-8 md:grid-cols-3">
          <div class="text-center">
            <div
              class="text-primary mx-auto mb-3 flex h-16 w-16 items-center justify-center rounded-full bg-blue-50"
            >
              <MapPin />
            </div>
            <p class="mb-2 text-sm font-bold text-gray-800">Dirección</p>
            <p class="text-sm text-gray-600">
              Ibarra, Velasco 2-39 entre Salinas y Juan Montalvo
            </p>
          </div>

          <div class="text-center">
            <div
              class="text-primary mx-auto mb-3 flex h-16 w-16 items-center justify-center rounded-full bg-blue-50"
            >
              <Phone />
            </div>
            <p class="mb-2 text-sm font-bold text-gray-800">Teléfono</p>
            <p class="text-sm text-gray-600">+593 06 2997800 Ext: 7351</p>
          </div>

          <div class="text-center">
            <div
              class="text-primary mx-auto mb-3 flex h-16 w-16 items-center justify-center rounded-full bg-blue-50"
